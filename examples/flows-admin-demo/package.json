{
  "name": "flows-admin-demo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "fix": "biome check --write .",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:navigation": "playwright test offboarding",
    "test:people": "playwright test people-navigation",
    "test:consistency": "playwright test data-consistency", 
    "test:errors": "playwright test error-states",
    "test:cross-app": "playwright test cross-app-navigation",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:client-priority": "playwright test client-priority",
    "test:regression": "node test-client-regression.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:client-persistence": "vitest run src/lib/tests/client-persistence.test.ts",
    "test:floating-button": "vitest run src/lib/tests/FloatingStatusButton.test.ts",
    "test:client-regression": "vitest run src/lib/tests/client-persistence.test.ts src/lib/tests/FloatingStatusButton.test.ts",
    "populate-demo": "vite-node populate-demo-data.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@playwright/test": "^1.53.1",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "autoprefixer": "^10.4.20",
    "bits-ui": "^1.8.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.47",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.0.0",
    "vite": "^6.2.6",
    "vite-node": "^3.2.4",
    "vite-plugin-restart": "^0.4.2",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.451.0",
    "shadcn-svelte": "^0.14.1",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1"
  },
  "optionalDependencies": {
    "@thepia/branding": "^1.0.0"
  }
}
